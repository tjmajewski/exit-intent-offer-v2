// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Shop {
  id                String   @id @default(uuid())
  shopifyDomain     String   @unique
  mode              String   @default("manual")
  plan              String   @default("pro")
  aiGoal            String   @default("revenue")
  aggression        Int      @default(5)
  budgetEnabled     Boolean  @default(false)
  budgetAmount      Float    @default(500)
  budgetPeriod      String   @default("month")
  budgetStartDate   DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  // Social Proof Fields
  customerCount         Int?
  orderCount            Int?
  avgRating             Float?
  reviewCount           Int?
  socialProofEnabled    Boolean   @default(true)
  socialProofType       String    @default("orders")
  socialProofMinimum    Int       @default(100)
  socialProofUpdatedAt  DateTime?
  
  // Copy Optimization
  copyVariants      String?  @default("{\"variants\":[],\"segmentBestVariants\":{}}")
  lastVariantUpdate DateTime? @default(now())
  
  // Meta-Learning
  contributeToMetaLearning Boolean @default(true)
  
  // Evolution System
  lastEvolutionCycle DateTime?
  
  // Evolution Controls (Enterprise)
  mutationRate       Int      @default(15)
  crossoverRate      Int      @default(70)
  selectionPressure  Int      @default(5)
  populationSize     Int      @default(10)
  
  // Brand Customization (Enterprise)
  brandPrimaryColor   String?  @default("#000000")
  brandSecondaryColor String?  @default("#ffffff")
  brandAccentColor    String?  @default("#f59e0b")
  brandFont           String?  @default("system")
  brandLogoUrl        String?
  customCSS           String?  // For advanced customization

  // Promotional Intelligence (Enterprise)
  promotionalIntelligenceEnabled Boolean @default(true)
  
  // Trigger Settings
  exitIntentEnabled   Boolean  @default(true)
  timeDelayEnabled    Boolean  @default(false)
  timeDelaySeconds    Int      @default(30)
  cartValueEnabled    Boolean  @default(false)
  cartValueMin        Float    @default(0)
  cartValueMax        Float    @default(999999)

  // Modal Content
  modalHeadline       String?  @default("Wait! Don't leave yet üéÅ")
  modalBody           String?  @default("Complete your purchase now and get an exclusive discount!")
  ctaButton           String?  @default("Complete My Order")
  redirectDestination String?  @default("checkout")

  discountCode        String?
  discountEnabled     Boolean  @default(false)
  offerType           String?  @default("percentage")
  
  discountOffers    DiscountOffer[]
  aiDecisions       AIDecision[]
  promotions        Promotion[]
  variants          Variant[]       @relation("ShopVariants")
  seasonalPatterns  SeasonalPattern[] @relation("ShopSeasonalPatterns")
  brandSafetyRule   BrandSafetyRule? @relation("ShopBrandSafetyRules")
}

model DiscountOffer {
  id              String    @id @default(uuid())
  shopId          String
  shop            Shop      @relation(fields: [shopId], references: [id])
  discountCode    String
  offerType       String
  amount          Float
  cartValue       Float?
  expiresAt       DateTime
  redeemed        Boolean   @default(false)
  redeemedAt      DateTime?
  createdAt       DateTime  @default(now())
  
  @@index([shopId, expiresAt])
  @@index([shopId, redeemed])
}

model AIDecision {
  id          String   @id @default(uuid())
  shopId      String
  shop        Shop     @relation(fields: [shopId], references: [id])
  signals     String
  decision    String
  offerId     String?
  createdAt   DateTime @default(now())
  
  @@index([shopId, createdAt])
}

model MetaLearningInsights {
  id              String   @id @default(uuid())
  insightType     String   // "signal_correlation" | "copy_pattern" | "benchmark"
  segment         String   // "mobile_paid", "desktop_organic", etc.
  data            String   // JSON blob of aggregated insights
  sampleSize      Int      // Number of data points used
  confidenceLevel Float    // Statistical confidence (0-1)
  lastUpdated     DateTime @default(now())
  version         Int      @default(1)
  
  @@index([segment, insightType])
  @@index([lastUpdated])
}

model Variant {
  id                String   @id @default(uuid())
  shopId            String
  shop              Shop     @relation(fields: [shopId], references: [id], name: "ShopVariants")
  
  // Identity
  variantId         String   @unique
  baseline          String   // revenue_with_discount, conversion_with_discount, etc
  segment           String   @default("all") // mobile, desktop, mobile_paid, etc
  status            String   @default("alive") // alive, dying, dead, champion
  generation        Int      @default(0)
  parents           String?  // JSON array ['VAR_ABC', 'VAR_DEF']
  
  // Genes (the DNA)
  offerAmount       Int
  headline          String
  subhead           String
  cta               String
  redirect          String   // cart | checkout
  urgency           Boolean
  
  // Visual Genes (Design DNA)
  colorScheme       String   @default("classic")
  layout            String   @default("centered")
  buttonStyle       String   @default("solid")
  animation         String   @default("fade")
  typography        String   @default("modern")
  
  // Performance
  impressions       Int      @default(0)
  clicks            Int      @default(0)
  conversions       Int      @default(0)
  revenue           Float    @default(0)
  profitPerImpression Float  @default(0)
  
  // Lifecycle
  birthDate         DateTime @default(now())
  deathDate         DateTime?
  championDate      DateTime?
  
  // Relations
  impressionRecords VariantImpression[]
  
  @@index([shopId, status])
  @@index([shopId, baseline, segment])
  @@index([status, profitPerImpression])
}

model VariantImpression {
  id                String   @id @default(uuid())
  variantId         String
  variant           Variant  @relation(fields: [variantId], references: [id])
  shopId            String
  
  // Outcome
  clicked           Boolean  @default(false)
  converted         Boolean  @default(false)
  revenue           Float?
  discountAmount    Float?
  profit            Float?   // revenue - discountAmount
  
  // Context
  segment           String   @default("all")
  deviceType        String?
  trafficSource     String?
  cartValue         Float?
  duringPromo       Boolean  @default(false)
  timestamp         DateTime @default(now())

  @@index([variantId, converted])
  @@index([shopId, duringPromo])
  @@index([shopId, timestamp])
  @@index([segment, timestamp])
}

model MetaLearningGene {
  id                String   @id @default(uuid())
  
  // Gene identity
  baseline          String
  geneType          String   // offerAmount, headline, subhead, cta, redirect, urgency
  geneValue         String   // The actual gene
  
  // Aggregated performance (across ALL stores)
  totalImpressions  Int      @default(0)
  totalConversions  Int      @default(0)
  totalRevenue      Float    @default(0)
  avgCVR            Float    @default(0)
  avgProfitPerImpression Float @default(0)
  confidenceLevel   Float    @default(0) // 0-1 (0.95 = 95% confidence)
  
  // Segmentation
  industry          String?  // fashion, sports, home, etc
  avgOrderValue     String?  // low (<$50), medium ($50-150), high (>$150)
  deviceType        String?  // mobile, desktop, all
  
  // Metadata
  sampleSize        Int      @default(0) // Number of stores this gene appeared in
  lastUpdated       DateTime @updatedAt
  
  @@index([baseline, avgProfitPerImpression])
  @@index([baseline, geneType, confidenceLevel])
}

model SeasonalPattern {
  id                String   @id @default(uuid())
  shopId            String
  shop              Shop     @relation(fields: [shopId], references: [id], name: "ShopSeasonalPatterns")
  
  // Season identification
  season            String   // blackFriday, holidaySeason, backToSchool, etc
  startDate         DateTime
  endDate           DateTime
  
  // Performance during this season (historical)
  avgCVR            Float    @default(0)
  avgAOV            Float    @default(0)
  avgProfitPerImpression Float @default(0)
  trafficMultiplier Float    @default(1) // e.g., 2.3x normal traffic
  
  // Recommended genes for this season
  recommendedOfferAmounts String  @default("[]") // JSON array [20, 25, 30]
  recommendedUrgency      Boolean @default(true)
  recommendedHeadlines    String  @default("[]") // JSON array of headline templates
  
  @@index([shopId, season])
}

model BrandSafetyRule {
  id                String   @id @default(uuid())
  shopId            String
  shop              Shop     @relation(fields: [shopId], references: [id], name: "ShopBrandSafetyRules")
  
  // Rules (Enterprise only)
  prohibitedWords   String   @default("[]") // JSON array ["cheap", "discount"]
  requiredPhrases   String   @default("[]") // JSON array ["premium quality"]
  maxDiscountPercent Int     @default(100) // e.g., 25
  tone              String   @default("casual") // luxury, casual, urgent, professional
  
  enabled           Boolean  @default(true)
  
  @@unique([shopId])
}

model Promotion {
  id                String    @id @default(uuid())
  shopId            String
  shop              Shop      @relation(fields: [shopId], references: [id])
  code              String
  amount            Float
  type              String    // "percentage" | "fixed_amount"
  detectedVia       String    // "webhook" | "usage_spike" | "manual"
  status            String    @default("monitoring") // "monitoring" | "active" | "ended"
  validFrom         DateTime?
  validUntil        DateTime?
  usageStats        String    @default("{\"total\":0,\"last24h\":0}") // JSON
  classification    String?   // "site_wide" | "targeted" | "customer_service"
  aiStrategy        String?   // "pause" | "increase" | "continue" | "ignore"
  aiStrategyReason  String?
  merchantOverride  String?
  seenByMerchant    Boolean   @default(false)
  detectedAt        DateTime  @default(now())
  createdAt         DateTime  @default(now())

  @@index([shopId, status])
  @@index([shopId, code])
  @@index([shopId, seenByMerchant])
  @@index([detectedAt])
}

model Conversion {
  id                String   @id @default(uuid())
  shopId            String
  
  // Order details
  orderId           String   // Shopify order ID
  orderNumber       String   // Human-readable (#1234)
  orderValue        Float
  customerEmail     String?
  orderedAt         DateTime
  
  // Modal context
  modalId           String
  modalName         String?
  variantId         String?  // For AI mode
  
  // Discount tracking
  modalHadDiscount  Boolean  @default(false)
  discountCode      String?
  discountRedeemed  Boolean  @default(false)
  discountAmount    Float?
  
  // Modal snapshot (Enterprise only)
  modalSnapshot     String?  // JSON of modal config when shown
  
  // Metadata
  createdAt         DateTime @default(now())
  
  @@index([shopId])
  @@index([orderedAt])
  @@unique([shopId, orderId])
}
